{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "datasource",
          "uid": "grafana"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "target": {
          "limit": 100,
          "matchAny": false,
          "tags": [],
          "type": "dashboard"
        },
        "type": "dashboard"
      }
    ]
  },
  "description": "System and Container Overview",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": 1,
  "panels": [
    {
      "title": "CPU Usage by Node",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "avg by (node) (rate(node_cpu_seconds_total{mode!=\"idle\"}[1m]) * 100)",
          "legendFormat": "{{node}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "CPU Usage %",
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "opacity",
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "decimals": 1,
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "title": "Memory Usage by Node",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "100 - ((node_memory_MemAvailable_bytes * 100) / node_memory_MemTotal_bytes)",
          "legendFormat": "{{node}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "Memory Usage %",
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "opacity",
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "decimals": 1,
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "title": "System Load Average",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "{{node}} - 1m"
        },
        {
          "expr": "node_load5",
          "legendFormat": "{{node}} - 5m"
        },
        {
          "expr": "node_load15",
          "legendFormat": "{{node}} - 15m"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "Load Average",
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "opacity"
          },
          "decimals": 2
        }
      }
    },
    {
      "title": "Disk Usage by Node",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"rootfs\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"rootfs\"})",
          "legendFormat": "{{node}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 75 },
              { "color": "red", "value": 90 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "title": "Container CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{node=~\"$node\",image!=\"\"}[1m]) * 100)",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "CPU %",
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "opacity",
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "decimals": 1,
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        }
      }
    },
    {
      "title": "Container Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "sum by (name) (container_memory_usage_bytes{node=~\"$node\",image!=\"\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "Memory",
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "opacity"
          },
          "decimals": 2,
          "unit": "bytes"
        }
      }
    },
    {
      "title": "Network Traffic Overview",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo\"}[5m])",
          "legendFormat": "Node {{node}} Receive"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo\"}[5m])",
          "legendFormat": "Node {{node}} Transmit"
        },
        {
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{node=~\"$node\",image!=\"\"}[5m]))",
          "legendFormat": "Container {{name}} Receive"
        },
        {
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{node=~\"$node\",image!=\"\"}[5m]))",
          "legendFormat": "Container {{name}} Transmit"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "Network Traffic",
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "opacity"
          },
          "unit": "Bps"
        }
      }
    },
    {
      "title": "Container Logs",
      "type": "logs",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "expr": "{node=~\"$node\",job=\"docker\"} | json | line_format \"[{{.app_name}} ({{.app_product}})] {{.message}}\"",
          "refId": "A"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": true,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": [],
  "templating": {
    "list": [
      {
        "datasource": {
          "type": "prometheus",
          "uid": "PBFA97CFB590B2093"
        },
        "hide": 0,
        "includeAll": true,
        "label": "Node",
        "multi": false,
        "name": "node",
        "query": "label_values(node_uname_info{}, node)",
        "refresh": 2,
        "regex": "",
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "title": "System Overview",
  "uid": "home",
  "version": 1
}